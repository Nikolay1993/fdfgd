<?xml version="1.0" ?>
<config>
    <modules>
        <New_Work>
            <version>0.0.1</version>
        </New_Work>
    </modules>

    <global>
        <helpers>
            <contacts>
                <rewrite>
                    <data>New_Work_Helper_Data</data>
                </rewrite>
            </contacts>
        </helpers>
    </global>

    <frontend>
        <routers>
            <contacts>
                <args>
                    <modules>
                        <New_Work before="Mage_Contacts">New_Work</New_Work>
                    </modules>
                </args>
            </contacts>
        </routers>
    </frontend>

    <default>
        <trans_email>
            <ident_sales>
                <contact_us>1</contact_us>
            </ident_sales>
            <ident_support>
                <contact_us>1</contact_us>
            </ident_support>
            <ident_repair>
                <name>Repair</name>
                <email>repair@example.com</email>
                <contact_us>1</contact_us>
            </ident_repair>
            <ident_returns>
                <name>Returns</name>
                <email>returns@example.com</email>
                <contact_us>1</contact_us>
            </ident_returns>
        </trans_email>
    </default>
</config>